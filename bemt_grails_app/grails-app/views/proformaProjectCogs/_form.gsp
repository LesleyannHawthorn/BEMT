<div class="row">
	<div class="small-8 columns">
		<label>COGS: <i class="fa fa-asterisk required_mark"></i></label>
		<g:textField name="name" value="${obj.name}" maxlength="50"></g:textField>
	</div>
</div>
<h5>Yearly Forecasts</h5>
<table class="proforma-forecast">
	<thead>
		<tr>
			<th class="text-center">Year 1</th>
			<th class="text-center">Year 2</th>
			<th class="text-center">Year 3</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td class="text-center" style="height:150px;width:33%">
				<div style="margin:0 auto;width:140px;">
					<div class="row collapse">
			      <div class="small-3 columns">
			        <span class="prefix radius">$</span>
			      </div>
			      <div class="small-9 columns">
			        <g:field class="radius" type="text" value="${obj.year1 ?: 0.00}" id="year1" name="year1"/>
			      </div>
			    </div>	
			  </div>
			</td>
			<td class="text-center" style="height:150px;width:33%">
				<div style="margin:0 auto; width:140px;">
					<div class="row collapse">
			      <div class="small-3 columns">
			        <span class="prefix radius">$</span>
			      </div>
			      <div class="small-9 columns">
			        <g:field class="radius" type="text" value="${obj.year2 ?: 0.00}" id="year2" name="year2"/>
			      </div>
			    </div>	
			  </div>
			</td>
			<td class="text-center" style="height:150px;width:33%">
				<div style="margin:0 auto;width:140px;">
					<div class="row collapse">
			      <div class="small-3 columns">
			        <span class="prefix radius">$</span>
			      </div>
			      <div class="small-9 columns">
			        <g:field class="radius" type="text" value="${obj.year3 ?: 0.00}" id="year3" name="year3"/>
			      </div>
			    </div>	
			  </div>
			</td>
		</tr>
	</tbody>
</table>			
