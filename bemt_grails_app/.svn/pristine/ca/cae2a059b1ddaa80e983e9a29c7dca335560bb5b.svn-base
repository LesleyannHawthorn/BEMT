<g:set var="pageInitScript" scope="request">BEMTUser.initPage();</g:set>
<html>
	<head>
		<meta name="layout" content="../layouts/default"/>
		<title>Your Profile</title>
	</head>
	<body>
		<g:render template="header" model="['title':'User Profile']"/>   
    <div class="row">
     	<div class="small-5 columns">
				<h4>Your Profile Information</h4>
				<div class="row">
					<div class="columns small-8">
						<g:render template="profile-form"/>
					</div>
				</div>
     	</div>
     	<div class="small-5 columns">
				<h4>Change Your Password</h4>
				<br/><br/>
				<div class="row">
					<div class="columns small-8">
						<g:render template="password-form"/>
					</div>
				</div>
     	</div>
     	<div class="small-2 columns">
     	</div>
    </div>
	</body>
</html>	