.row.full-width {
  width: 100%;
  max-width: 100%;
}

.marketdata  {

	margin: 10px 0 0 0 ;
	
	.search-controls {
		padding:5px 15px 5px 5px;
		border-bottom:1px solid $market-data-border-altcolor;
	}

	.search-control {
		font-size:0.9em;
		margin:0 0 5px 0;
		padding:0px;
		
		label {
			margin:5px 0 0 0;
			padding:0;
		}

		select {
			padding:2px;
			font-size:0.9em;
		}
	}
	
	.search-buttons {
		text-align:left;

		.button {
			padding:6px 8px;
			margin-bottom:3px;

		}
	}


	.search-results {
		padding:15px 5px 5px 5px;
		@include border-radius(10px);	
	}

	.default-msg {
		margin: 0 auto;
		width:50%;
		font-size:2em;
	}

	.single-select select {
		margin-bottom:5px;

	}

	select.multiselect {
		height:50px;
		margin-bottom:10px;
	}

	.ageheader {
		margin-bottom:2px;
	}
}

