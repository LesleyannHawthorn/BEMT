$market-data-border-color:#bbb;
$market-data-border-altcolor:$bemt-primary-color;

$market-label-color:#333;
$market-label-size:1.0em;

$market-slicecolor1:#d70206;
$market-slicecolor2:#F4C63D;
$market-slicecolor3:purple;
$market-slicecolor4:green;
$market-slicecolor5:blue;
$market-slicecolor6:gray;

.md-detail-instructions {
	font-size:0.9em;
	margin:2px 0px 4px 0px;
	font-style: italic;
}

.md-results-count {
	margin-bottom:5px;
	font-style: italic;
}

.md-results {
	padding:4px 0;

	border:1px solid #777;
	border-collapse: collapse;

	.md-details-row {

		.md-row-sep {
			height:2px;
			border-bottom:1px solid #ccc;
			margin:4px 0;
		}

		table.md-results-detail {
			border-collapse: collapse;
			td {
				font-size:0.9em;
				padding:2px;
				margin:2px 0px;
			}

			th {
				font-size:0.9em;
				padding:2px;
				margin:0;
				background-color: #ccc;
				border-top:1px solid #777;
				border-bottom:1px solid #777;
				border-collapse: collapse;
			}			
		}
		


		dd > a {
			font-size:0.9em;
			padding:5px 10px;
			margin:0px;
		}

		dl {
			width:200px;
			padding:0;
			margin:0;
		}

		dl:first-child {
			border-top:1px solid #ccc;
		}
		dd:not(.active) {
			border-bottom:1px solid #ccc;
			border-right:6px solid #ccc;
			border-left:1px solid #ccc;
		}
		dd.active {
			
			border-right:none;
			border-bottom:1px solid #ccc;
			border-left:1px solid #ccc;
			a {
				background-color:$bemt-primary-color;
				color:#fff;
				font-weight:bold;
			}
		}

	}

	tr.md-results-row {
		
		.md-detail-toggle {
			text-align:center;
			a {
				color:#999;
			}
			a:hover {
				color:blue;
			}
		}
		
		td {
			font-size:1em;
			padding:4px 0px;
			margin:2px 0px;
		}

		th {
			font-size:1em;
			padding:0;
			margin:0;
			background-color: #ccc;
			border-bottom:1px solid #777;
			border-collapse: collapse;
		}
	}
}

.md-load-widget {
	width:200px;
	margin:10px auto;
	text-align:center
}


.chart-widget {
	h5 {
		margin-left:20px;
	}
}

.legend {
	margin-top:20px;
	margin-left:20px;
	.entry {
		margin-bottom:5px;
		.swatch {
			height:20px;			
			width:20px;			
		}
		.llabel {
			line-height:18px;
			padding-top:2px;
			margin-left:30px;
			.other {
				font-size:0.8em;
			}
		}
	}
}

